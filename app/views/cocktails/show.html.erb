<h1>Cocktail Card</h1>
<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
<p><strong>Ingredients:</strong>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> de <%= dose.ingredient.name %>
      <%= link_to "-Delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      <% end %>
  </p>

<p><%= link_to 'Back', cocktails_path %></p>
<p><%= link_to '+Add a Dose', new_cocktail_dose_path(@cocktail.id) %></p>
